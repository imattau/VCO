{
  "name": "@vco/vco-sync",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "proto:gen": "node ../../scripts/generate-proto.mjs",
    "build": "npm run proto:gen && tsc -p tsconfig.build.json && mkdir -p dist/generated && cp src/generated/vco.pb.js src/generated/vco.pb.d.ts dist/generated/",
    "typecheck": "npm run proto:gen && tsc -p tsconfig.build.json --noEmit",
    "test": "npm run proto:gen && vitest run",
    "clean": "rm -rf dist .tsbuildinfo src/generated/vco.pb.js src/generated/vco.pb.d.ts"
  },
  "dependencies": {
    "@noble/hashes": "^1.8.0",
    "@nostr-dev-kit/ndk": "^3.0.0",
    "@nostr-dev-kit/sync": "^1.0.0",
    "@vco/vco-core": "0.1.0",
    "@vco/vco-transport": "0.1.0",
    "merkle-ts": "^1.2.11"
  }
}
